{
  "name": "de-palma",
  "version": "1.0.0",
  "description": "AI-powered task assignment system that mimics a human team member",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "sam:build": "sam build",
    "sam:deploy:dev": "sam deploy --config-env dev",
    "sam:deploy:prod": "sam deploy --config-env prod",
    "sam:local": "sam local start-api",
    "sam:invoke": "sam local invoke",
    "dev": "concurrently \"npm run build:watch\" \"npm run sam:local\"",
    "package:lambdas": "npm run build && npm run sam:build"
  },
  "keywords": [
    "ai",
    "task-assignment",
    "serverless",
    "aws",
    "lambda",
    "typescript"
  ],
  "author": "De Palma Project",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@aws-sdk/client-dynamodb": "^3.609.0",
    "@aws-sdk/client-lambda": "^3.609.0",
    "@aws-sdk/client-ses": "^3.609.0",
    "@aws-sdk/lib-dynamodb": "^3.609.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "axios": "^1.7.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}